<Window x:Class="Biblio_Directory2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblio_Directory2"
        mc:Ignorable="d"
        Title="BiblioApp" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="BiblioList" FontSize="16" FontWeight="Bold" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path = Book}" IsReadOnly="False" Header="Book" Width="180"/>
                <DataGridTextColumn Binding="{Binding Path = Puzzle}" IsReadOnly="False" Header="Puzzle" Width="180"/>
                <DataGridTextColumn Binding="{Binding Path = Games}" IsReadOnly="False" Header="Games" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
